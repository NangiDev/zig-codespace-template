{
    "name": "Ziggy",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "postCreateCommand": "chmod +x .devcontainer/install_zig.sh && /bin/bash .devcontainer/install_zig.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ziglang.vscode-zig"
            ],
            "settings": {
                "zig.zigPath": "/usr/local/bin/zig"
            }
        }
    }
}